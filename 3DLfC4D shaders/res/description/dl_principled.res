		SHADERLINK BASE_LAYER_METALLIC_SHADER{ANIM OFF;}
		SEPARATOR { LINE; }

		REAL BASE_LAYER_ANISOTROPY{MIN -1; MAX 1; MINSLIDER -1; MAXSLIDER 1; STEP 0.001; CUSTOMGUI REALSLIDER;}
		SHADERLINK BASE_LAYER_ANISOTROPY_SHADER{ANIM OFF;}
		SEPARATOR { LINE; }
		
		COLOR BASE_LAYER_ANISOTROPY_DIRECTION{}
		SHADERLINK BASE_LAYER_ANISOTROPY_DIRECTION_SHADER{ANIM OFF;}
		SEPARATOR { LINE; }
		
		REAL BASE_LAYER_OPACITY{MIN 0; MAX 1; MINSLIDER 0; MAXSLIDER 1; STEP 0.001; CUSTOMGUI REALSLIDER;}
