	GROUP BUMP
	{
		LONG BUMP_TYPE
		{
			CYCLE
			{
				BUMP_MAP;
				NORMAL_MAP_DIRECTX;
				NORMAL_MAP_OPENGL;
				DISPLACEMENT_0;
				DISPLACEMENT_5;
			}
		}
		SHADERLINK BUMP_VALUE{ANIM OFF;}
		SEPARATOR { LINE; }
		REAL BUMP_INTENSITY{ANIM OFF; CUSTOMGUI REALSLIDER;}
		LONG BUMP_LAYERS_AFFECTED
		{
			CYCLE
			{
				AFFECT_BOTH_LAYERS;
				AFFECT_COATING_LAYER;
				AFFECT_BASE_LAYER;
			}
